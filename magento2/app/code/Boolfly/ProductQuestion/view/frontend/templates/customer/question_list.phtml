<?php
// @codingStandardsIgnoreFile
/** @var \Boolfly\ProductQuestion\Block\Customer\QuestionList $block */
$questions = $block->getQuestions();
?>
<?php if ($questions && count($questions)): ?>
    <div class="table-wrapper questions">
        <table class="data table table-reviews" id="my-questions-table">
            <caption class="table-caption"><?= $block->escapeHtml(__('Questão de produto')) ?></caption>
            <thead>
            <tr>
                <th scope="col" class="col summary"><?= $block->escapeHtml(__('Titulo')) ?></th>
                <th scope="col" class="col summary"><?= $block->escapeHtml(__('Conteudo')) ?></th>
                <th scope="col" class="col date"><?= $block->escapeHtml(__('Criado')) ?></th>
                <th scope="col" class="col item"><?= $block->escapeHtml(__('Nome do Produto')) ?></th>
            </tr>
            </thead>
            <tbody>
            <?php foreach ($questions as $question): ?>
                <tr>
                    <td data-th="<?= $block->escapeHtml(__('Titulo')) ?>" class="col title"><?= $block->escapeHtml($question->getTitle()) ?></td>
                    <td data-th="<?= $block->escapeHtml(__('Conteudo')) ?>" class="col content"><?= $block->escapeHtml($question->getShortContent()) ?></td>
                    <td data-th="<?= $block->escapeHtml(__('Criado')) ?>" class="col date"><?= /* @escapeNotVerified */ $block->getDateFormat($question->getCreationTime()) ?></td>
                    <td data-th="<?= $block->escapeHtml(__('Nome do Produto')) ?>" class="col item">
                        <?php if ($block->getProductInfo($question)) : ?>
                            <?php $info = $block->getProductInfo($question)?>
                            <strong class="product-name">
                                <a href="<?= $block->escapeUrl($info->getUrl()) ?>"><?= $block->escapeHtml($info->getName()) ?></a>
                            </strong>
                            <br/>
                        <?php endif; ?>
                    </td>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
    </div>
    <?php if ($block->getToolbarHtml()): ?>
        <div class="toolbar products-question-toolbar bottom">
            <?= $block->getToolbarHtml() ?>
        </div>
    <?php endif; ?>
<?php else: ?>
    <div class="message info empty"><span><?= $block->escapeHtml(__('Você não enviou nenhuma pergunta.')) ?></span></div>
<?php endif; ?>
<div class="actions-toolbar">
    <div class="secondary">
        <a class="action back" href="<?= $block->escapeUrl($block->getBackUrl()) ?>">
            <span><?= $block->escapeHtml(__('Voltar')) ?></span>
        </a>
    </div>
</div>
