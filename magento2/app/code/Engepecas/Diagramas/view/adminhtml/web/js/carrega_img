define(['jquery'], function($){
    "use strict";
    return function carrega_img()
    {
        $(document).ready(function() {
            $("#formulario").on("submit", function(e) {
                e.preventDefault();
                var textarea = $("#imagem").val();
                $.ajax({
                    url: "processaDados.php",
                    method: "POST",
                    dataType: "html",
                    data: textarea
                }).done(function(data) {
                    alert("foi \n" + textarea);
                    //faz algo quando enviar certo
                }).fail(function(data) {
                    alert('NÃ£o foi');
                    //faz algo quando der errado
                });
            });
        });
    }
});
